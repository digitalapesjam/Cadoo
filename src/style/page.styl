body
  margin 0
  background-color #000000
  font-family Arial, 'Helvetica Neue', Helvetica, sans-serif
  color white

#game
  max-width 640px
  margin 0 auto
  
#inserttext
    display none
    position absolute
    text-align center
    left 0px
    margin 30px 10% 50px 10%
    width 80%
    
#scoreboard
    display none
    position absolute
    text-align center
    left 0px
    margin 30px 20% 50px 20%
    padding-bottom 20px
    width 60%
    background-color #222222
    
#scores
    text-align left
    margin-left 15px
    
#restart
    font-size 20px
    
#playername
    font-size 20px

#submit
    font-size 20px
